{
  "compilerOptions": {
    "types": [
      "vitest/importMeta"
    ],
    "target": "es2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, // enable all strict type-checking options
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}